.chat-group-form
  %h1 新規チャットグループ
  = form_for @group do |f|
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label :group_name, "グループ名",class: 'chat-group-form__label'
      .chat-group-form__field--right
        = f.text_field :group_name, placeholder: "グループ名を入力してください",class: 'chat-group-form__input'

    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label :user_ids,"チャットメンバーを追加", class: 'chat-group-form__label'
      .chat-group-form__field--right
        .chat-group-form__search.clearfix
          = f.collection_check_boxes :user_ids, User.all, :id, :nickname, placeholder: "追加したいユーザー名を入力してください",class: 'chat-group-form__input'

    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label "チャットメンバー", class: 'chat-group-form__label'
      .chat-group-form__field--right
        .chat-group-user
          = current_user.nickname

    .chat-group-form__field.clearfix
      .chat-group-form__field--left
      .chat-group-form__field--right
        = f.submit "Save", class: "chat-group-form__action-btn"
